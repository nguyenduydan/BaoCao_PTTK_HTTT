@using QuanLyKhoHang.Views.Import_Product
@{
    ViewBag.Title = "Thêm hàng";
    ImportProduct childrenFeatures = new ImportProduct();
    ViewBag.Children = childrenFeatures.Show();
    ViewBag.showFeature = true;
}
@section Style{
    <link rel="Stylesheet" href="~/Content/Import.css" />
}
<div class="margin">
    <div class="m"><h3>Nhập hàng</h3></div>
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="add">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="d-flex flex-fill">
        <div class="d-flex align-items-center">
            <span>Mã hàng</span>
            <div class="col c1">
                <input type="text" class="form-control" />
            </div>
        </div>

        <div class="d-flex align-items-center">
            <span style="width:120px">Số lượng</span>
            <div class="col c2">
                <input type="number" class="form-control" />
            </div>
        </div>

    </div>

    <div class="d-flex align-items-center">
            <span>Tên hàng</span>
            <div class="col c3">
                <input type="text" class="form-control"/>
            </div>
      </div>

        <div class="d-flex align-items-center">
            <span>Loại hàng</span>
            <div class="col c4">
                <input type="text" class="disabled form-control" readonly disabled/>
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <div class="d-flex align-items-center">
                <span>Giá bán</span>
                <div class="col c5">
                    <input type="number" class="form-control" />
                </div>
            </div>

            <div class="d-flex align-items-center">
                <span>Ngày hết hạn</span>
                <div class="col c6">
                    <input type="text" class="form-control" />
                </div>
            </div>
        </div>
        

        <div class="d-flex align-items-center">
            <span style="margin-right:6px">Nhà cung cấp</span>
            <div class="col">
                <select>
                    <option>
                        Chọn nhà cung cấp...
                    </option>
                </select>
            </div>
        </div>

        <div class="d-flex btn">
            <button>KIỂM TRA</button>
            <input type="submit" value="THANH TOÁN" class="btn btn-default" />
        </div>
    </div>
    }
</div>
    

