@model QuanLyKhoHang.Models.SANPHAM
@using QuanLyKhoHang.Views.Import_Product
@{
    ViewBag.Title = "Thêm hàng";
    ImportProduct childrenFeatures = new ImportProduct();
    ViewBag.Children = childrenFeatures.Show();
    ViewBag.showFeature = true;
}
@section Style{
    <link rel="Stylesheet" href="~/Content/Import.css" />
}
<div class="margin">
    <div class="m"><h3>Nhập hàng</h3></div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="add">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="d-flex flex-fill">
        <div class="d-flex align-items-center">
            <span>Mã hàng</span>
            <div class="col c1">
                @Html.EditorFor(model => model.MASP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MASP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex align-items-center">
            <span style="width:120px">Số lượng</span>
            <div class="col c2">
                @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SOLUONG, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>

    <div class="d-flex align-items-center">
        <span>Tên hàng</span>
        <div class="col c3">
            @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <div class="d-flex align-items-center">
            <span>Giá bán</span>
            <div class="col c5">
                @Html.EditorFor(model => model.GIACA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GIACA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex align-items-center">
            <span>Ngày hết hạn</span>
            <div class="col c6">
                @Html.EditorFor(model => model.NGAYHETHAN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NGAYHETHAN, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div class="d-flex align-items-center">
        <span style="margin-right:6px">Nhà cung cấp</span>
        <div class="col">
            <select name="MA_NCCAP" class="form-control">
                <option>Chọn nhà cung cấp</option>
                @foreach (var i in new QuanLyKhoHang.Models.QLKHEntities1().NHACUNGCAP.ToList())
                {
                    <option value="@i.MA_NCCAP">@i.TEN_NCCAP</option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.MA_NCCAP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="d-flex btn">
        <input type="submit" value="THÊM" class="btn btn-default" />
    </div>
</div>
    }
</div>