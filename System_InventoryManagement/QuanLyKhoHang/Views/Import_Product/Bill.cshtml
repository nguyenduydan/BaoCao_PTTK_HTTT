@model QuanLyKhoHang.Models.DONTHANHTOAN

@using QuanLyKhoHang.Views.Import_Product
@{
    ViewBag.Title = "Đơn thanh toán";
    ImportProduct childrenFeatures = new ImportProduct();
    ViewBag.Children = childrenFeatures.Show();
    ViewBag.showFeature = true;
}
@section Style{
    <link rel="Stylesheet" href="~/Content/Import.css" />
}
<div class=" position-relative" style="
    height: 100%;
    top: -40px;">
    <div class="margin info" style="padding-top:40px">
        <div class="m"><h3>Đơn thanh toán</h3></div>

        <div class="d-flex align-items-start">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="add">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="d-flex align-items-center">
                        <span >Tên sản phẩm</span>
                        <div class="col c1">
                            @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger fs-6" })
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <span>Số lượng</span>
                        <div class="col c1">
                            @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SOLUONG, "", new { @class = "text-danger fs-6" })
                        </div>
                    </div>

                    <div class="d-flex align-items-center">
                        <span>Giá cả</span>
                        <div class="col c1">
                            @Html.EditorFor(model => model.GIACA, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GIACA, "", new { @class = "text-danger fs-6" })
                        </div>
                    </div>

                    <div class="d-flex btn align-items-center">
                        <a href="@Url.Action("Index","Import_Product")">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50"
                                 fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                                <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
                            </svg>
                        </a>
                        <input type="submit" value="KIỂM TRA" class="btn btn-default mx-5" />
                    </div>
                </div>
            }
        </div>

    </div>
</div>
